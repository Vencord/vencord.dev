<style>
    .source-and-disclaimer a {
        color: var(--accentPurple);
        text-decoration: none;
    }

    footer {
        margin-top: auto;
        background-color: var(--bg0);
        padding: 1rem;
    }

    .content {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin: 0 1em;
    }

    .source-and-disclaimer {
        display: flex;
        font-weight: 300;
        filter: brightness(80%);
        font-size: 90%;
        margin-right: 1em;
    }

    @media screen and (max-width: 900px) {
        .source-and-disclaimer {
            flex-direction: column;
        }
    }

    .socials {
        display: flex;
        gap: 1em;
    }

    .socials a {
        color: var(--fg0);
    }

    svg {
        width: 1.5em;
        height: 1.5em;
        shape-rendering: auto;
        color: var(--fg0);
        transition: filter 0.2s ease-in-out;
    }

    a:hover svg {
        filter: brightness(1.2);
    }
</style>
