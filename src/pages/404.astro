---
export const prerender = true;

import Layout from "layouts/Layout.astro";
---

<Layout title="404" description="Uh oh" opengraph={false}>
    <div class="err-container">
        <div class="content">
            <img src="/assets/oneko-jump.png" aria-hidden="true" />
            <h1>404</h1>
            <p class="light">it's dark here...</p>
            <p class="dark">are you lost?</p>
            <a href="/">let's go home...</a>
        </div>
    </div>
</Layout>

<style>
    @font-face {
        font-family: "Minecraft";
        src: url("/fonts/Minecraft-Regular.woff") format("woff");
        font-weight: normal;
        font-style: normal;
    }
    .err-container {
        margin: 3rem 0;
        position: relative;
        height: 100%;
    }
    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    body {
        background: var(--bgDim);
    }
    a {
        color: var(--accentBlue);
    }

    h1,
    p,
    a {
        font-family: Minecraft, Inter, system-ui, sans-serif;
        text-align: center;
    }

    h1 {
        margin: 1rem 0;
        color: var(--light);
        font-size: 6em;
    }

    p {
        margin: 2rem 0;
        color: var(--accentRed);
        font-size: clamp(2rem, 3vw + 0.1rem, 4rem);
    }

    img {
        display: block;
        image-rendering: pixelated;
        width: 100px;
    }

    @media (prefers-color-scheme: dark) {
        .light {
            display: none;
        }
    }

    @media (prefers-color-scheme: light) {
        .dark {
            display: none;
        }
    }
</style>
